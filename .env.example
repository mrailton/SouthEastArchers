# Flask Configuration
FLASK_ENV=development
FLASK_APP=web.py
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration (for URL generation)
SERVER_NAME=localhost:5000  # For production: your-domain.com
PREFERRED_URL_SCHEME=http   # For production: https
SITE_URL=http://localhost:5000  # Fallback URL

# Database
# For Docker: use 'db' as hostname
# For local: use 'localhost'
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=southeastarchers
MYSQL_USER=appuser
MYSQL_PASSWORD=changeme
DATABASE_URL=mysql+pymysql://appuser:changeme@localhost:3306/southeastarchers

# Email (SMTP)
# For local development with mailhog/mailcatcher, comment out USERNAME/PASSWORD
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USE_SSL=False
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-password
MAIL_DEFAULT_SENDER=noreply@southeastarchers.ie

# Sum Up Payment API
SUMUP_API_KEY=your-sumup-api-key
SUMUP_MERCHANT_CODE=your-merchant-code
