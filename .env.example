# Flask Configuration
FLASK_ENV=development
FLASK_APP=web.py
SECRET_KEY=your-secret-key-here-change-in-production

# Database (Docker Compose)
# For Docker: db service name resolves automatically
# For local: use localhost
MYSQL_ROOT_PASSWORD=changeme
MYSQL_DATABASE=southeastarchers
MYSQL_USER=appuser
MYSQL_PASSWORD=changeme
DATABASE_URL=mysql+pymysql://appuser:changeme@db:3306/southeastarchers

# Redis (for background jobs)
# For Docker: redis service name resolves automatically
# For local: use localhost
REDIS_URL=redis://redis:6379/0

# Email (SMTP)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_DEFAULT_SENDER=noreply@southeastarchers.ie

# Sum Up Payment API
SUMUP_API_KEY=your-sumup-api-key
SUMUP_MERCHANT_CODE=your-merchant-code

# Optional: Custom web port (default: 5000)
WEB_PORT=5000
