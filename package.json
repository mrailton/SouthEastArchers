{
  "name": "south-east-archers",
  "version": "1.0.0",
  "description": "South East Archers Club Website",
  "type": "module",
  "scripts": {
    "dev": "npm run build:css:watch & npm run build:js:watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss resources/assets/css/style.css -o resources/static/css/style.min.css",
    "build:css:watch": "postcss resources/assets/css/style.css -o resources/static/css/style.min.css --watch",
    "build:js": "esbuild resources/assets/js/main.js --bundle --minify --outfile=resources/static/js/main.min.js --sourcemap",
    "build:js:watch": "esbuild resources/assets/js/main.js --bundle --minify --outfile=resources/static/js/main.min.js --sourcemap --watch"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.14",
    "cssnano": "^7.1.2",
    "esbuild": "^0.19.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^4.1.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.0"
  }
}
